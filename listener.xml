<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="curler7_user.user_listener.class">Curler7\UserBundle\Bridge\ORM\UserListener</parameter>
    </parameters>

    <services>
        <service id="curler7_user.user_listener" class="%curler7_user.user_listener.class%" public="false">
            <argument type="service" id="curler7_user.util.password_updater" />
            <argument type="service" id="curler7_user.util.canonical_fields_updater" />
            <tag name="doctrine.event_subscriber" />
        </service>
    </services>
</container>
