<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
       https://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="curler7_user.data_persister.user_data_persister"
                 class="%curler7_user.data_persister.user_data_persister.class%"
                 public="false"
                 decorates="api_platform.doctrine.orm.data_persister"
        >
            <argument type="service" id=".inner" />
            <argument type="service" id="curler7_user.util.login_link_sender" />
            <argument>%curler7_user.config.login_link_register%</argument>
            <argument>%curler7_user.config.login_link_post%</argument>
            <tag name="api_platform.data_persister" />
        </service>
        <service id="Curler7\UserBundle\DataPersister\UserDataPersister" alias="curler7_user.data_persister.user_data_persister" />

    </services>
</container>
