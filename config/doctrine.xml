<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="curler7_user.group_manager.class">Curler7\UserBundle\Bridge\ORM\GroupManager</parameter>
        <parameter key="curler7_user.user_manager.class">Curler7\UserBundle\Bridge\ORM\UserManager</parameter>
        <parameter key="curler7_user.object_manager.class">Doctrine\Common\Persistence\ObjectManager</parameter>
    </parameters>

    <services>
        <service id="curler7_user.group_manager" class="%curler7_user.group_manager.class%" public="false">
            <argument type="service" id="curler7_user.object_manager" />
            <argument>%curler7_user.model.group.class%</argument>
        </service>
        <service id="Curler7\UserBundle\Manager\GroupManagerInterface" alias="curler7_user.group_manager" />

        <service id="curler7_user.user_manager" class="%curler7_user.user_manager.class%" public="false">
            <argument type="service" id="curler7_user.util.password_updater" />
            <argument type="service" id="curler7_user.util.canonical_fields_updater" />
            <argument type="service" id="curler7_user.object_manager" />
            <argument>%curler7_user.model.user.class%</argument>
        </service>
        <service id="Curler7\UserBundle\Manager\UserManagerInterface" alias="curler7_user.user_manager" />

        <service id="curler7_user.object_manager" class="%curler7_user.object_manager.class%" public="false">
            <argument>%curler7_user.model_manager_name%</argument>
        </service>
    </services>
</container>
